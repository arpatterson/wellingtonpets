<p id="notice"><%= notice %></p>


<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Tumblr</th>
      <th>Instragram</th>
      <th>Favourite parks</th>
      <th>Desexed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= image_tag animal.picture_url, width: '100%' if animal.picture.present? %></td>
        <td><%= animal.name %></td>
        <td><%= animal.age %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.facebook %></td>
        <td><%= animal.twitter %></td>
        <td><%= animal.tumblr %></td>
        <td><%= animal.instragram %></td>
        <td><%= animal.favourite_parks %></td>
        <td><%= animal.desexed %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

